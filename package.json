{
  "private": true,
  "name": "smdn-project",
  "version": "1.0.0",
  "description": "Fullstack project",
  "repository": "https://github.com/samsoedien/smdn-project.git",
  "author": "Samsoedien <contact@samsoedien.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn lerna bootstrap",
    "clean": "yarn lerna clean",
    "lint": "eslint ./packages --ext js,jsx,ts,tsx",
    "lint:styles": "stylelint './packages/**/*.tsx'",
    "storybook": "yarn lerna run storybook --stream"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "commitlint": "^8.3.5",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "stylelint": "^13.2.0",
    "stylelint-config-recommended": "^3.0.0",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn --silent lint --fix"
    ],
    "*.tsx": [
      "yarn --silent lint:styles"
    ]
  }
}
